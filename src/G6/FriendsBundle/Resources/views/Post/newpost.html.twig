{# empty Twig template #}

{% include "G6FriendsBundle::header.html.twig" with {'title': 'New Post','user':name,'isLogin': 1} %}

<br>
<div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
        <div class="well bs-component">
            <form name="postForm" class="form-horizontal" action="newpost" method="POST" onsubmit="return validatePostForm();">
                <fieldset>
                    <legend>Write a new post</legend>
                    <label id="emptyPost" class="label"> </label>
                    <div id="fgPost" class="form-group">

                        <div class="col-lg-12">
                            <textarea class="form-control" name="post_content" rows="10"></textarea>
                        </div>
                    </div>


                    <div class="form-group">


                        <div class="col-lg-3 col-lg-offset-11">  

                            <button type="submit" class="btn btn-primary">Post</button>
                        </div>

                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>


{% if success==1 %}
    <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            <div class="alert alert-dismissible alert-success"> 

                <p class="text-center"><strong>Post successfull</strong></p>

            </div>
        </div>
    </div> 
{% endif %}

