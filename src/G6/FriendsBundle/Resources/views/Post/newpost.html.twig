<script>
    function validatePostForm() {

        var post_content = document.forms["postForm"]["post_content"].value;
        var error = 0;

        if (post_content === null || post_content === "") {
            var fgPost = document.getElementById("fgPost");
            fgPost.className += " has-warning";
            showValidateError('Please enter something.');
            error = 1;
        }

        if (error === 1)
        {
            return false;
        }

    }

    function showValidateError(message) {

        var errorBox = document.getElementById("emptyPost");
        var messegeHTML = message;
        errorBox.className = "label label-warning";
        errorBox.innerHTML = messegeHTML;

    }

    function hideValidateError(message) {

        var errorBox = document.getElementById("emptyPost");
        var messegeHTML = '';
        errorBox.className = "";
        errorBox.innerHTML = messegeHTML;

    }
</script>
